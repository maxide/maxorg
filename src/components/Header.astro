---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Talent', href: '/talent' },
  { name: 'How It Works', href: '/how-it-works' },
  { name: 'Partners', href: '/partners' },
  { name: 'Insights', href: '/insights' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' }
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img src="/logo.png" alt="Maxsys International" class="h-10 w-auto" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:block">
        <div class="ml-10 flex items-baseline space-x-8">
          {navItems.map((item) => (
            <a 
              href={item.href} 
              class="text-gray-700 hover:text-primary-600 px-3 py-2 text-lg font-medium transition-colors duration-200"
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Login Dropdown & CTA Button -->
      <div class="hidden lg:flex items-center space-x-4">
        <!-- Login Dropdown -->
        <div class="relative">
          <button 
            id="login-dropdown-button"
            class="text-gray-700 hover:text-primary-600 px-3 py-2 text-lg font-medium transition-colors duration-200 flex items-center"
          >
            Login
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div 
            id="login-dropdown-menu"
            class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 hidden z-50"
          >
            <a 
              href="https://hub.maxsys.org/wp-login.php" 
              class="block px-4 py-3 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-200 border-b border-gray-100"
            >
              Hub Portal Login
            </a>
            <a 
              href="https://hrm.maxsys.org/login" 
              class="block px-4 py-3 text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-200"
            >
              HRM Portal Login
            </a>
          </div>
        </div>
        
        <!-- Donate Button -->
        <a 
          href="/donate" 
          class="bg-primary-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-primary-700 transition-colors duration-200"
        >
          Donate Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button 
          type="button" 
          class="mobile-menu-button bg-gray-100 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden lg:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-lg font-medium"
          >
            {item.name}
          </a>
        ))}
        
        <!-- Mobile Login Links -->
        <div class="border-t border-gray-200 pt-3 mt-3">
          <a 
            href="https://hub.maxsys.org/wp-login.php" 
            class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-lg font-medium"
          >
            Hub Portal Login
          </a>
          <a 
            href="https://hrm.maxsys.org/login" 
            class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-lg font-medium"
          >
            HRM Portal Login
          </a>
        </div>
        
        <a 
          href="/donate" 
          class="bg-primary-600 text-white block px-3 py-2 rounded-md text-lg font-medium hover:bg-primary-700 mt-4"
        >
          Donate Now
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Mobile menu toggle
  const button = document.querySelector('.mobile-menu-button');
  const menu = document.querySelector('.mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', function() {
      menu.classList.toggle('hidden');
    });
  }
  
  // Login dropdown toggle
  const loginButton = document.getElementById('login-dropdown-button');
  const loginMenu = document.getElementById('login-dropdown-menu');
  
  if (loginButton && loginMenu) {
    loginButton.addEventListener('click', function(e) {
      e.preventDefault();
      loginMenu.classList.toggle('hidden');
    });
    
    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
      if (!loginButton.contains(e.target) && !loginMenu.contains(e.target)) {
        loginMenu.classList.add('hidden');
      }
    });
  }
});
</script>